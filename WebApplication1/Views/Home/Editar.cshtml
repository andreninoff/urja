@model WebApplication1.produto

@{
	ViewBag.Title = "Editar produto";
}

<section class="content-header">
	<div class="row">
		<a href='/' class="btn btn-sm btn-warning"> VOLTAR </a>
	</div>
</section>

<hr />

<section class="content">
	
	<div class="row">
		<div class="box">
			<div class="box-body">
				@using (Html.BeginForm())
				{

					@Html.AntiForgeryToken()

					<div class="row">
						<div class="col-md-5">
							<div class="form-group">
								<label for="categoria">Categoria</label>
								<select name="categoria" class="form-control select2">

									@foreach (var categoria in ViewBag.categorias)
									{
										<option value="@categoria.Value" @if (categoria.Value == ViewBag.objeto.categoria) { @Html.Raw("selected") }>@categoria.Text</option>
									}

								</select>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col-md-5">
							<div class="form-group">
								<label for="nome">Nome do Produto</label>
								<input type="text" name="nome" id="nome" class="form-control" value="@ViewBag.objeto.nome" required />
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col-md-5">
							<div class="form-group">
								<label for="preco">Preco</label>
								<input type="text" name="preco" id="preco" class="form-control" value="@ViewBag.objeto.preco" required />
							</div>
						</div>
					</div>

					<hr />

					<div class="box-footer text-center">
						<button type="submit" class="btn btn-primary margin">Salvar</button>
					</div>

				}

			</div>
		</div>
	</div>
</section>